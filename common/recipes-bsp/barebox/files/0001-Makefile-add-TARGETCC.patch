Date: Tue, 11 Nov 2014 16:11:18 +0100
Subject: [PATCH] Makefile: add TARGETCC
MIME-Version: 1.0
Content-Type: text/plain; charset=UTF-8
Content-Transfer-Encoding: 8bit

Hand down user space toolchain settings to target tools in scripts
folder.

Signed-off-by: Stefan MÃ¼ller-Klieser <s.mueller-klieser@phytec.de>
---
 Makefile         | 1 +
 scripts/Makefile | 2 +-
 2 files changed, 2 insertions(+), 1 deletion(-)

diff --git a/Makefile b/Makefile
index 151579c..cd0c7b0 100644
--- a/Makefile
+++ b/Makefile
@@ -168,6 +168,7 @@ export srctree objtree VPATH
 
 ARCH            ?= sandbox
 CROSS_COMPILE   ?=
+TARGETCC        ?= 
 
 # Architecture as present in compile.h
 UTS_MACHINE := $(ARCH)
diff --git a/scripts/Makefile b/scripts/Makefile
index 2050ec4..fe38966 100644
--- a/scripts/Makefile
+++ b/scripts/Makefile
@@ -36,7 +36,7 @@ targetprogs-$(CONFIG_IMD_TARGET) += bareboximd-target
 subdir-	+= basic kconfig setupmbr
 
 quiet_cmd_csingle	= CC      $@
-      cmd_csingle	= $(CC) -Wp,-MD,$(depfile) $(CFLAGS) -o $@ $<
+      cmd_csingle	= $(TARGETCC) -Wp,-MD,$(depfile) $(CFLAGS) -o $@ $<
 
 __targetprogs	:= $(sort $(targetprogs-y) $(targetprogs-m))
 target-csingle	:= $(foreach m,$(__targetprogs),$(if $($(m)-objs),,$(m)))
