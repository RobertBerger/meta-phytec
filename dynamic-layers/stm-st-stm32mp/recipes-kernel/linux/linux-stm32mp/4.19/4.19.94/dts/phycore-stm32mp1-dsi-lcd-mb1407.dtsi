&i2c1 {
        status = "okay";
        touchscreen@2a {
                compatible = "focaltech,ft6236";
                reg = <0x2a>;
                interrupts = <8 2>;
                interrupt-parent = <&gpioi>;
                interrupt-controller;
                touchscreen-size-x = <480>;
                touchscreen-size-y = <800>;
                status = "okay";
        };

        touchscreen@38 {
                compatible = "focaltech,ft6336";
                reg = <0x38>;
                interrupts = <8 2>;
                interrupt-parent = <&gpioi>;
                interrupt-controller;
                touchscreen-size-x = <480>;
                touchscreen-size-y = <800>;
                status = "okay";
        };
};

&ltdc {
        dma-ranges;
        status = "okay";

        port {
                #address-cells = <1>;
                #size-cells = <0>;

                ltdc_ep1_out: endpoint@1 {
                        reg = <1>;
                        remote-endpoint = <&dsi_in>;
                };
        };
};

&dsi {
        #address-cells = <1>;
        #size-cells = <0>;
        status = "okay";

        ports {
                #address-cells = <1>;
                #size-cells = <0>;

                port@0 {
                        reg = <0>;
                        dsi_in: endpoint {
                                remote-endpoint = <&ltdc_ep1_out>;
                        };
                };

                port@1 {
                        reg = <1>;
                        dsi_out: endpoint {
                                remote-endpoint = <&panel_in>;
                        };
                };
        };

        dsi_panel:panel@0 {
                compatible = "orisetech,otm8009a";
                reg = <0>;
                reset-gpios = <&gpiod 9 GPIO_ACTIVE_LOW>;
                status = "okay";

                port {
                        panel_in: endpoint {
                                remote-endpoint = <&dsi_out>;
                        };
                };
        };
};
