diff --git a/GFX_Linux_SDK/OGLES/SDKPackage/Builds/OGLES/LinuxARMV7/make_platform.mak b/GFX_Linux_SDK/OGLES/SDKPackage/Builds/OGLES/LinuxARMV7/make_platform.mak
